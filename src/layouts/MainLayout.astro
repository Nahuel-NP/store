---
import Navbar from "@/components/shared/Navbar.astro";

interface Props {
  title?: string;
  description?:string;
  image?: string;
}

import "@/assets/styles/global.css";
const { title = "Astro Store" } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />

    <main class="container mx-auto max-w-5xl  px-4 mt-20">
      <slot />
    </main>
  </body>
</html>
